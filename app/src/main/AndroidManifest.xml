<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mad.restaurant">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CustomerHomeActivity"></activity>
        <activity android:name=".FoodItemDetailsActivity" />
        <activity android:name=".add_promotions" />
        <activity android:name=".CartActivity" />
        <activity android:name=".icecream" />
        <activity android:name=".Burgers" />
        <activity android:name=".Submarians" />
        <activity android:name=".Sandwiches" />
        <activity android:name=".Drinks" />
        <activity
            android:name=".AddHomeItemActivity"
            android:parentActivityName=".HomeActivity"></activity>
        <activity android:name=".OrderActivity" />
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>