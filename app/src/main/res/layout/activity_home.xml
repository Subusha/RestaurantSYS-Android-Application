<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ddd"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints"
                    android:background="@color/home_header">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/homeSearch"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="16dp"
                        app:cardBackgroundColor="@color/searchBackground"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:drawableStart="@drawable/ic_search_primary_light"
                            android:drawableLeft="@drawable/ic_search_primary_light"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="search_your_recipes"
                            android:textColor="@color/colorPrimaryLight" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:id="@+id/txt_spOffers"
                        android:layout_marginTop="10dp"
                        android:text="@string/homeHeaderName"
                        android:textAlignment="gravity"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/txt_spOffers"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="20dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="260dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#4CAF50">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgCat1"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/food_vector" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@id/imgCat1"
                                    android:layout_marginTop="10dp"
                                    android:background="#46535353"
                                    android:gravity="center"
                                    android:text="Manage Promotions"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16dp" />

                                <Button
                                    android:id="@+id/btnCat1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#6CDF72">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgCat2"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/food_vector" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@id/imgCat2"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:background="#46535353"
                                    android:gravity="center"
                                    android:text="Manage Meals"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16dp" />

                                <Button
                                    android:id="@+id/btnCat2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#4CAFAC">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgCat3"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/food_vector" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@id/imgCat3"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:background="#46535353"
                                    android:gravity="center"
                                    android:text="Category 3"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16dp" />

                                <Button
                                    android:id="@+id/btnCat3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#4C84AF">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgCat4"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/food_vector" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@id/imgCat4"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:background="#46535353"
                                    android:gravity="center"
                                    android:text="Category 4"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16dp" />

                                <Button
                                    android:id="@+id/btnCat4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#664AA8">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgCat5"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/food_vector" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@id/imgCat5"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:background="#46535353"
                                    android:gravity="center"
                                    android:text="Category 5"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16dp" />

                                <Button
                                    android:id="@+id/btnCat5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="#876BCE">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imgCat6"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/food_vector" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@id/imgCat6"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:background="#46535353"
                                    android:gravity="center"
                                    android:text="Category 6"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16dp" />

                                <Button
                                    android:id="@+id/btnCat6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnclientView"
                        android:background="@drawable/rouded_corner_button"/>


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>